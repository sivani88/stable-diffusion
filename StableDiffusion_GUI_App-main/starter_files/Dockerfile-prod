FROM python:3.11.10-slim

# Configuration de l'environnement Python
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Installation des dépendances système
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libjpeg62-turbo-dev \
    zlib1g-dev \
    libfreetype6-dev \
    liblcms2-dev \
    libopenjp2-7-dev \
    libwebp-dev \
    python3-tk \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Définir le répertoire de travail
WORKDIR /app

# Copie des fichiers de dépendances Python
COPY requirements.txt .
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install -r requirements.txt

# Copie de tous les fichiers du projet dans l'image
COPY . .

# Copie des fichiers du modèle Stable Diffusion
# Remplacez /path/to/stable-diffusion-model par le chemin sur votre hôte
COPY /path/to/stable-diffusion-model /app/models/stable-diffusion-v1-4
COPY ./logs /logs
COPY ./static /app/static
COPY ./static/images /app/static/images
COPY ./static/images/saved /app/static/images/saved
# Expose le port pour Flask
EXPOSE 8000

USER root
# Commande par défaut pour démarrer Flask
CMD ["python3", "-m", "flask", "run", "--host=0.0.0.0", "--port=8000"]
